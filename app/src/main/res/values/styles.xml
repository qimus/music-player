<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Set parent theme as app theme. -->
    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TrackItemTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0F1E36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TrackItemAlbum">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#545663</item>
    </style>
    
    <style name="PlayerTrackTitle">
        <item name="android:textColor">#0F1E36</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="PlayerTrackAlbum">
        <item name="android:textColor">#0F1E36</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="alpha">0.48</item>
    </style>
    
    <style name="TextAppearance.Compat.Notification.Media">
        <item name="android:color">@android:color/holo_red_dark</item>
        <item name="backgroundColor">@android:color/holo_red_dark</item>
    </style>

    <style name="TextAppearance.Compat.Notification.Title.Media">
        <item name="android:color">@android:color/holo_red_dark</item>
        <item name="backgroundColor">@android:color/holo_red_dark</item>
    </style>

</resources>
